            android:layout_marginStart="10dip"
            android:layout_marginEnd="20dip"
            android:layout_marginTop="10dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trajet Moyen"
